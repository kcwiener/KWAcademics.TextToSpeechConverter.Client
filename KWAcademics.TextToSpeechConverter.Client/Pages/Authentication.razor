@page "/authentication/{action}"
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@inject NavigationManager Navigation
@inject IJSRuntime JS

<RemoteAuthenticatorView Action="@Action">
    <LoggingIn>
        <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
            <div class="text-center">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Signing you in...</p>
            </div>
        </div>
    </LoggingIn>
    <CompletingLoggingIn>
        <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
            <div class="text-center">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Completing sign-in...</p>
            </div>
        </div>
    </CompletingLoggingIn>
    <CompletingLogOut>
        <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
            <div class="text-center">
                <div class="spinner-border text-primary" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Signing you out...</p>
            </div>
        </div>
    </CompletingLogOut>
    <LogInFailed>
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Login Failed</h4>
            <p>There was a problem logging you in. Please try again.</p>
            <p class="text-muted small">Check browser console (F12) for detailed error message.</p>
            <hr>
            <a href="" class="btn btn-primary">Try Again</a>
        </div>
    </LogInFailed>
    <LogOutFailed>
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Logout Failed</h4>
            <p>There was a problem logging you out.</p>
            <p class="text-muted small">Open browser console (F12) and type: <code>clearMsalCache()</code> then reload</p>
            <hr>
            <a href="" class="btn btn-primary">Try Again</a>
        </div>
    </LogOutFailed>
</RemoteAuthenticatorView>

@code {
    [Parameter]
    public string? Action { get; set; }
}
